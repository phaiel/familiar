# Familiar Environment Configuration
# Copy this to .env and fill in your values

# =============================================================================
# AI Providers (at least one required for classification)
# =============================================================================

# OpenAI
OPENAI_API_KEY=sk-...

# Anthropic
ANTHROPIC_API_KEY=sk-ant-...

# Google Gemini
GOOGLE_API_KEY=AI...

# =============================================================================
# Windmill (Workflow Orchestration)
# =============================================================================

# Windmill server URL
WINDMILL_URL=http://localhost:8000

# Workspace name (created by setup.sh)
WINDMILL_WORKSPACE=familiar

# API token (generated by setup.sh)
WINDMILL_TOKEN=

# =============================================================================
# Database (TigerData/TimescaleDB)
# =============================================================================

# PostgreSQL connection string
# DATABASE_URL=postgres://user:password@localhost:5432/familiar

# =============================================================================
# Service Ports
# =============================================================================

# familiar-service API port
PORT=3001

# heddle-ui port (served separately)
HEDDLE_UI_PORT=3000


# MinIO (Media Storage)
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=familiar
MINIO_SECRET_KEY=familiarpass
MINIO_BUCKET=familiar-media
MEDIA_TTL_HOURS=72



