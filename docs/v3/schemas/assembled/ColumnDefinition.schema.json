{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/phaiel/familiar-schema/main/docs/v3/schemas/types/database/ColumnDefinition.v1.json",
  "title": "Column Definition",
  "description": "Schema for defining a database table column.",
  "category": "snippets",
  "source_file": "snippets/types/database/ColumnDefinition.json",
  "type": "object",
  "properties": {
    "name": {
      "title": "Name Field",
      "description": "The primary, human-readable name of an entity.",
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": [
        "string",
        "integer",
        "boolean",
        "timestamp",
        "uuid"
      ]
    },
    "nullable": {
      "type": "boolean",
      "default": false
    },
    "primary_key": {
      "type": "boolean",
      "default": false
    },
    "unique": {
      "type": "boolean",
      "default": false
    }
  },
  "required": [
    "name",
    "type"
  ]
}