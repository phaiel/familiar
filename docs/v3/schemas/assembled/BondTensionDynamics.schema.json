{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/phaiel/familiar-schema/main/docs/v3/schemas/laws/BondTensionDynamics.v1.schema.json",
  "title": "Bond Tension Dynamics Law",
  "description": "Applies classical spring-damper physics to a Bond, simulating the tension and resilience of a relationship based on the distance between the connected Threads.",
  "category": "laws",
  "source_file": "laws/BondTensionDynamics.schema.json",
  "type": "object",
  "properties": {
    "physics_properties": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "$id": "https://raw.githubusercontent.com/phaiel/familiar-schema/main/docs/v3/schemas/base/PhysicsProperties.v1.schema.json",
      "title": "Base Physics Properties",
      "description": "Defines the common physics-related properties for components and laws.",
      "type": "object",
      "required": [
        "engine",
        "is_quantum"
      ],
      "properties": {
        "collapse_sensitive": {
          "description": "Indicates if the object is affected by or triggers quantum collapse.",
          "type": "boolean"
        },
        "engine": {
          "description": "The physics engine responsible for this object.",
          "enum": [
            "quantum",
            "classical",
            "hybrid"
          ]
        },
        "is_quantum": {
          "description": "Indicates if the object has quantum properties.",
          "type": "boolean"
        }
      }
    },
    "execution_envelope": {
      "type": "object",
      "properties": {
        "trigger": {
          "type": "string",
          "enum": [
            "event",
            "user_request",
            "observation",
            "system_schedule"
          ]
        },
        "priority": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10
        },
        "timeout_ms": {
          "type": "integer",
          "default": 500
        }
      },
      "required": [
        "trigger",
        "priority"
      ],
      "title": "BasePhysicsLawExecutionEnvelope"
    },
    "affected_components": {
      "description": "A list of component schema IDs that this law reads from or writes to.",
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": [
    "physics_properties",
    "execution_envelope",
    "affected_components"
  ],
  "schema_version": "1.0.0",
  "physics_properties": {
    "engine": "classical",
    "is_quantum": false,
    "collapse_sensitive": false
  },
  "execution_envelope": {
    "trigger": "system_schedule",
    "priority": 5,
    "timeout_ms": 50
  },
  "affected_components": [
    "https://raw.githubusercontent.com/phaiel/familiar-schema/main/docs/v3/schemas/components/BondTensionComponent.v1.schema.json",
    "https://raw.githubusercontent.com/phaiel/familiar-schema/main/docs/v3/schemas/components/MemoryManifoldPosition.v1.schema.json"
  ]
}