{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/phaiel/familiar-schema/main/docs/v3/schemas/entities/Course.v1.schema.json",
  "title": "Course Entity",
  "description": "A system entity that tracks the end-to-end lifecycle of a single cognitive task.",
  "category": "entities",
  "source_file": "entities/Course.schema.json",
  "type": "object",
  "properties": {
    "entity_type": {
      "description": "The canonical type of the system entity.",
      "type": "string",
      "enum": [
        "Stitch",
        "Course",
        "Shuttle",
        "Tenant",
        "WorkflowTask"
      ],
      "const": "Course"
    },
    "workflow_state": {
      "$id": "https://raw.githubusercontent.com/phaiel/familiar-schema/main/docs/v3/schemas/types/workflow/WorkflowState.v1.json",
      "title": "Workflow State",
      "description": "Represents the state of a long-running, orchestrated workflow.",
      "type": "object",
      "properties": {
        "status": {
          "$id": "https://raw.githubusercontent.com/phaiel/familiar-schema/main/docs/v3/schemas/fields/Status.v1.json",
          "title": "Status Field",
          "description": "The current status of a task or process.",
          "type": "string",
          "enum": [
            "Pending",
            "InProgress",
            "Completed",
            "Cancelled"
          ],
          "default": "Pending"
        },
        "current_step": {
          "type": "string"
        },
        "error_message": {
          "type": [
            "string",
            "null"
          ]
        },
        "last_updated": {
          "$id": "https://raw.githubusercontent.com/phaiel/familiar-schema/main/docs/v3/schemas/types/primitives/NullableTimestamp.v1.json",
          "title": "Nullable Timestamp",
          "description": "A canonical definition for an optional ISO 8601 timestamp with timezone.",
          "type": [
            "string",
            "null"
          ]
        }
      },
      "required": [
        "status",
        "current_step",
        "last_updated"
      ]
    },
    "components": {
      "properties": {
        "details": {
          "$schema": "https://json-schema.org/draft/2020-12/schema",
          "$id": "https://raw.githubusercontent.com/phaiel/familiar-schema/main/docs/v3/schemas/components/CourseDetails.v1.schema.json",
          "title": "Course Details Component",
          "description": "The data component for a Course entity, tracking the content and results of the workflow.",
          "type": "object",
          "properties": {
            "physics_properties": {
              "$schema": "https://json-schema.org/draft/2020-12/schema",
              "$id": "https://raw.githubusercontent.com/phaiel/familiar-schema/main/docs/v3/schemas/base/PhysicsProperties.v1.schema.json",
              "title": "Base Physics Properties",
              "description": "Defines the common physics-related properties for components and laws.",
              "type": "object",
              "required": [
                "engine",
                "is_quantum"
              ],
              "properties": {
                "collapse_sensitive": {
                  "description": "Indicates if the object is affected by or triggers quantum collapse.",
                  "type": "boolean"
                },
                "engine": {
                  "description": "The physics engine responsible for this object.",
                  "enum": [
                    "quantum",
                    "classical",
                    "hybrid"
                  ]
                },
                "is_quantum": {
                  "description": "Indicates if the object has quantum properties.",
                  "type": "boolean"
                }
              }
            },
            "fields": {
              "description": "Component-specific fields",
              "type": "object",
              "additionalProperties": true
            }
          },
          "required": [
            "physics_properties",
            "fields"
          ],
          "physics_properties": {
            "engine": "classical",
            "is_quantum": false
          },
          "fields": {
            "source_weave_id": {
              "$id": "https://raw.githubusercontent.com/phaiel/familiar-schema/main/docs/v3/schemas/fields/EntityId.v1.json",
              "title": "Entity ID Field",
              "description": "A reusable definition for a unique entity identifier.",
              "type": "string"
            },
            "status": {
              "$id": "https://raw.githubusercontent.com/phaiel/familiar-schema/main/docs/v3/schemas/fields/Status.v1.json",
              "title": "Status Field",
              "description": "The current status of a task or process.",
              "type": "string",
              "enum": [
                "Pending",
                "InProgress",
                "Completed",
                "Cancelled"
              ],
              "default": "Pending"
            },
            "final_insight_entity_id": {
              "$id": "https://raw.githubusercontent.com/phaiel/familiar-schema/main/docs/v3/schemas/fields/EntityId.v1.json",
              "title": "Entity ID Field",
              "description": "A reusable definition for a unique entity identifier.",
              "type": "string"
            },
            "user_facing_message": {
              "type": "string"
            }
          }
        }
      },
      "required": [
        "details"
      ]
    },
    "infrastructure": {
      "$id": "https://raw.githubusercontent.com/phaiel/familiar-schema/main/docs/v3/schemas/snippets/types/infrastructure/WorkflowOrchestrator.v1.json",
      "title": "Workflow Orchestrator",
      "description": "Infrastructure stack for workflow orchestration and execution, including Windmill workflows, event processing, and state management.",
      "type": "object",
      "properties": {
        "workflow_engine": {
          "type": "string",
          "description": "The workflow execution engine.",
          "default": "windmill"
        },
        "database_module": {
          "type": "string",
          "description": "The Terraform module for workflow state storage.",
          "default": "timescaledb"
        },
        "event_processors": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of event processors for workflow triggers.",
          "default": [
            "workflow-trigger",
            "state-change",
            "completion-handler"
          ]
        },
        "streaming_topics": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Redpanda topics for workflow events.",
          "default": [
            "workflow-events",
            "workflow-state",
            "workflow-completion"
          ]
        },
        "observability_dashboard": {
          "type": "string",
          "description": "Path to the Grafana dashboard for workflow monitoring.",
          "default": "/dashboards/workflow-orchestrator"
        },
        "trigger_topics": {
          "default": [
            "api.user.query.received"
          ]
        },
        "status_topics": {
          "default": [
            "workflow.course.status.updates"
          ]
        }
      },
      "required": [
        "workflow_engine",
        "database_module",
        "event_processors",
        "streaming_topics",
        "observability_dashboard"
      ]
    }
  },
  "required": [
    "entity_type"
  ],
  "not": {
    "description": "Rule 17.2: System entities MUST NOT have physics components.",
    "required": [
      "physics_state"
    ]
  }
}