  "$id": "https://raw.githubusercontent.com/phaiel/familiar-schema/main/docs/v3/schemas/base/Component.v1.schema.json",
  "title": "Base Component",
  "description": "The base schema for all ECS components.",
  "type": "object",
  "allOf": [
    {
      "$ref": "./BaseMetadata.schema.json"
    }
  ],
  "properties": {
    "physics_properties": {
      "$ref": "./BasePhysics.schema.json"
    },
    "fields": {
