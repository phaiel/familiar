{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/phaiel/familiar-schema/main/docs/v3/schemas/base/Event.v1.schema.json",
  "title": "Base Event",
  "description": "The base schema for all events published to the Redpanda streaming platform, now with a mandatory, tenant-scoped context.",
  "type": "object",
  "allOf": [{ "$ref": "./BaseMetadata.schema.json" }],
  "schema_version": "1.2.0",
  "properties": {
    "event_id": { "$ref": "../snippets/fields/EntityId.json" },
    "trace_id": { "$ref": "../snippets/fields/EntityId.json" },
    "timestamp": { "$ref": "../snippets/fields/CreatedAt.json" },
    "source_service": { "type": "string" },
    "tenant_id": {
      "description": "The tenant this event belongs to. This is a mandatory field for security and performance. System-level events may use a null value.",
      "type": ["string", "null"],
      "format": "uuid"
    }
  },
  "required": ["event_id", "trace_id", "timestamp", "source_service", "tenant_id", "payload"]
}