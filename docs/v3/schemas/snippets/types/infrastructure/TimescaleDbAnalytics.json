{
  "$id": "https://raw.githubusercontent.com/phaiel/familiar-schema/main/docs/v3/schemas/snippets/types/infrastructure/TimescaleDbAnalytics.v1.json",
  "title": "TimescaleDB Analytics Stack",
  "description": "The infrastructure stack for TimescaleDB analytics database optimized for time-series cognitive data.",
  "type": "object",
  "properties": {
    "service_template": {
      "type": "string",
      "description": "The Backstage template for TimescaleDB deployment.",
      "default": "familiar-timescaledb-analytics"
    },
    "database_version": {
      "type": "string",
      "description": "TimescaleDB version to deploy.",
      "default": "2.11"
    },
    "required_extensions": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Required PostgreSQL/TimescaleDB extensions.",
      "default": ["timescaledb", "pgvector", "vectorscale", "pg_stat_statements", "pg_trgm", "btree_gin"]
    },
    "table_schemas": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Table schemas this database manages."
    },
    "hypertables": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "table_name": { "type": "string" },
          "time_column": { "type": "string", "default": "timestamp" },
          "chunk_time_interval": { "type": "string", "default": "1 day" },
          "compression_enabled": { "type": "boolean", "default": true }
        },
        "required": ["table_name"]
      },
      "description": "Hypertables configuration for time-series data."
    },
    "continuous_aggregates": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "source_table": { "type": "string" },
          "time_bucket": { "type": "string" },
          "refresh_policy": { "type": "string" }
        },
        "required": ["name", "source_table", "time_bucket"]
      },
      "description": "Continuous aggregates for real-time analytics."
    },
    "retention_policies": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "table_name": { "type": "string" },
          "retention_period": { "type": "string" },
          "compression_after": { "type": "string" }
        },
        "required": ["table_name", "retention_period"]
      },
      "description": "Data retention and compression policies."
    },
    "vector_config": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "embedding_dimensions": {
          "type": "integer",
          "default": 1536
        },
        "index_type": {
          "type": "string",
          "enum": ["ivfflat", "hnsw"],
          "default": "hnsw"
        }
      },
      "required": ["enabled"]
    },
    "backup_config": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "backup_schedule": {
          "type": "string",
          "default": "0 2 * * *"
        },
        "retention_days": {
          "type": "integer",
          "default": 30
        }
      },
      "required": ["enabled"]
    },
    "observability_dashboard": {
      "type": "string",
      "description": "Path to the Grafana dashboard for TimescaleDB metrics."
    }
  },
  "required": [
    "service_template",
    "table_schemas",
    "observability_dashboard"
  ]
} 