{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/phaiel/familiar-schema/main/docs/v3/schemas/entities/Intent.v1.schema.json",
  "title": "Intent Entity",
  "description": "A classical entity representing a specific, user-declared future action or task.",
  "allOf": [
    { "$ref": "./_base/BaseCognitiveEntity.schema.json" },
    {
      "properties": {
        "entity_type": { "const": "Intent" },
        "components": {
          "title": "IntentComponents",
          "properties": {
            "content": { "$ref": "../components/IntentContent.schema.json" },
            "status": { "$ref": "../components/TaskStatus.schema.json" }
          },
          "required": ["content", "status"]
        },
        "physics_state": {
          "title": "IntentPhysicsState",
          "properties": {
            "universal": { "$ref": "../components/UniversalPhysicsState.schema.json" },
            "manifold_position": { "$ref": "../components/MemoryManifoldPosition.schema.json" }
          },
          "required": ["universal", "manifold_position"]
        },
        "infrastructure": {
          "allOf": [{ "$ref": "../snippets/types/infrastructure/StandardApiServiceStack.json" }],
          "properties": {
            "streaming_topics": { "default": ["entity.intent.lifecycle.events"] },
            "observability_dashboard": { "default": "grafana/dashboards/intent-entity-overview.json" }
          }
        }
      },
      "required": ["components", "physics_state"]
    }
  ]
}