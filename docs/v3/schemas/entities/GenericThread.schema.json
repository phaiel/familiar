{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/phaiel/familiar-schema/main/docs/v3/schemas/entities/GenericThread.v1.schema.json",
  "title": "Generic Thread",
  "description": "A Thread representing a Place, Concept, or GenericObject, which MUST NOT have a CognitiveBaseline.",
  "type": "object",
  "allOf": [
    { "$ref": "./_base/BaseCognitiveEntity.schema.json" },
    {
      "properties": {
        "entity_type": { "const": "Thread" },
        "identity": {
          "$ref": "../components/ThreadContent.schema.json",
          "properties": { "fields": { "properties": { "thread_type": { "enum": ["Place", "Concept", "GenericObject"] } } } }
        },
        "physics_state": {
          "title": "GenericThreadPhysicsState",
          "properties": { "universal": { "$ref": "../components/UniversalPhysicsState.schema.json" } },
          "required": ["universal"]
        },
        "infrastructure": {
          "allOf": [{ "$ref": "../snippets/types/infrastructure/StandardApiServiceStack.json" }],
          "properties": {
            "streaming_topics": { "default": ["entity.thread.lifecycle.events"] },
            "observability_dashboard": { "default": "grafana/dashboards/generic-thread-overview.json" }
          }
        }
      },
      "required": ["identity", "physics_state"]
    }
  ]
}